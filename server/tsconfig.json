{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "server/src/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_module/**/*.ts",
        "dist/**/*"
    ]
}